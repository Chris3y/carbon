{
  "preset": "./node_modules/carbon-factory/jest.conf.json",
  "notify": false,
  "setupFiles": [
    "raf/polyfill",
    "./src/__spec_helper__/index.js"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js", 
    "jsx"
  ],
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "./preprocessor.js"
  },
  "testMatch": [
    "**/__spec__.(ts|tsx|js)",
    "**/*.spec.(ts|tsx|js)"  
  ]
}
